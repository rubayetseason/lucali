// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  number    String
  password  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  review    Review[]

  @@map("users")
}

model Reservation {
  id           String   @id @default(uuid())
  personName   String
  personNumber String
  time         String
  date         String
  people       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("reservations")
}

model Food {
  id          String   @id @default(uuid())
  name        String
  price       Int
  img         String   @default("")
  detail      String
  type        FoodType
  description String
  isPopular   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews     Review[]

  @@map("foods")
}

model Review {
  id                String   @id @default(uuid())
  reviewDescription String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  foodId            String
  food              Food     @relation(fields: [foodId], references: [id])
  userId            String
  user              User     @relation(fields: [userId], references: [id])

  @@map("reviews")
}

enum FoodType {
  STARTERS
  MAINCOURSE
  DESSERTS
  MOCKTAILS
}
